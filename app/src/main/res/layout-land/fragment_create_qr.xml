<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".qrcode.CreateQRFragment"
    android:paddingLeft="100dp"
    android:paddingRight="100dp">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create QR Code"
        android:textColor="?attr/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextProductName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input_white"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="?attr/colorPrimary"
        android:textColorHint="@color/gray_200" />

    <EditText
        android:id="@+id/editTextProductBrand"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input_white"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Brand"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="?attr/colorPrimary"
        android:textColorHint="@color/gray_200" />

    <EditText
        android:id="@+id/editTextProductDate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input_white"
        android:clickable="true"
        android:drawablePadding="12dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Expiry Date"
        android:inputType="date"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="?attr/colorPrimary"
        android:textColorHint="@color/gray_200" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left">
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add product"
            android:layout_marginTop="8dp"/>

        <CheckBox
            android:id="@+id/addWithEvent_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add calendar event"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="?attr/colorPrimary"
        android:text="GENERATE"
        android:textColor="@color/white" />

</LinearLayout>