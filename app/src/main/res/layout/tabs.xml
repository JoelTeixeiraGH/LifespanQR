<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.tabs.TabLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:backgroundTint="?attr/superLightColor"
    android:layout_alignParentBottom="true">

    <com.google.android.material.tabs.TabItem
        android:id="@+id/tabItem_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/ic_baseline_format_list_bulleted_24"/>

    <com.google.android.material.tabs.TabItem
        android:id="@+id/tabItem_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/ic_baseline_camera_alt_24" />


    <com.google.android.material.tabs.TabItem
        android:id="@+id/tabItem_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/ic_baseline_history_24"
/>

</com.google.android.material.tabs.TabLayout>